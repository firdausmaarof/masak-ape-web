<div class="container">
	<div class="ordering-section-head text-center wow bounceInRight" data-wow-delay="0.4s">
		<h3>Manage Ingredients</h3>
		<div class="dotted-line">
			<h4><%= link_to "Add ingredient", new_ingredient_path, class: 'btn btn-primary' %></h4>
		</div>
	</div>
	
	<table id="ingredientTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th>Ingredient</th>
				<th>Ramuan</th>
				<th>Option</th>
			</tr>
		</thead>
		<tbody>
			<% @ingredients.each do |x| %>
				<tr>
					<td><%= x.ingredient %></td>
					<td><%= x.ramuan %></td>
					<td>
						<%= link_to "Edit", edit_ingredient_path(x), class: 'btn btn-primary' %>
						<%= link_to "Delete", ingredient_path(x), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>