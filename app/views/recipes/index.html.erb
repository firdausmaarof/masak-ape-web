<div class="container">
	<div class="ordering-section-head text-center wow bounceInRight" data-wow-delay="0.4s">
		<h3>Manage Recipes</h3>
		<div class="dotted-line">
			<h4><%= link_to "Add recipe", new_recipe_path, class: 'btn btn-primary' %></h4>
		</div>
	</div>
	
	<table id="recipeTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th>Photo</th>
				<th>Recipe</th>
				<th>Instruction</th>
				<th>Option</th>
			</tr>
		</thead>
		<tbody>
			<% @recipes.each do |x| %>
				<tr>
					<td><img src="<%= image_path(x.photo)%>" alt="" width="100px"></td>
					<td>
						Recipe: <%= x.recipe %> <br>
						Resipi: <%= x.resipi %> <br>
						<% @cuisine = Cuisine.find(x.cuisine_id) %>
						Cuisine: <%= @cuisine.cuisine %> <br>
						Time: <%= x.time %> <br>
						Rating: <%= x.rating %>
					</td>
					<td>
						Instruction: <%= x.instruction %> <br>
						Arahan: <%= x.arahan %>
					</td>
					<td>
						<%= link_to "Edit", edit_recipe_path(x), class: 'btn btn-primary' %>
						<%= link_to "Delete", recipe_path(x), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>