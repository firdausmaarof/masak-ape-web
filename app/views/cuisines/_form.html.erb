<% if @cuisine.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@cuisine.errors.count, "error") %> prohibited
    this cuisine from being saved:
  </h2>
  <ul>
    <% @cuisine.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for @cuisine, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :cuisine, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :cuisine, class: 'form-control' %>
    </div>    
  </div>
  <div class="form-group">
    <%= f.label :masakan, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :masakan, class: 'form-control' %>
    </div>    
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", cuisines_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>